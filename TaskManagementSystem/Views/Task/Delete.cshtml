@model TaskManagementSystem.Models.ViewModels.TaskViewModel
@{
    ViewBag.Title = "Delete Task Confirmation";
}

<h2>Delete Task Confirmation</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.TaskId, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.TaskId, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", style = "max-width: 100%;", @disabled = "disabled" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", style = "max-width: 100%;; height: 200px;", @disabled = "disabled" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateTimeCreated, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.DateTimeCreated, new { @class = "form-control", type = "text", value = Model.DateTimeCreated.ToString("MM/dd/yyyy hh:mm tt"), @disabled = "disabled" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DueDate, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.DueDate, new { @class = "form-control", type = "text", value = Model.DueDate.ToString("MM/dd/yyyy hh:mm tt"), @disabled = "disabled" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaskStatusID, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.TaskStatusID, ViewBag.StatusList as IEnumerable<SelectListItem>, "Select Status", new { @class = "form-control", @disabled = "disabled" })
        </div>

        @Html.HiddenFor(model => model.TaskId)
        @Html.HiddenFor(model => model.Title)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model => model.DueDate)
        @Html.HiddenFor(model => model.TaskStatusID)
        @Html.HiddenFor(model => model.TaskPriorityID)
        @Html.HiddenFor(model => model.UserID)


        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary"><i class="fas fa-trash" style="margin-right: 5px;"></i> Delete</button>
                <a href="@Url.Action("YourTaskList", "Task")" class="btn btn-danger">
                    <i class="fas fa-times" style="margin-right: 5px;"></i> Cancel
                </a>
            </div>
        </div>
    </div>
}
<br>

